<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FacebookClientSample.MyProfile">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" Spacing="2" BackgroundColor="Silver">
            <Frame CornerRadius="360" OutlineColor="Teal" HasShadow="true" HeightRequest="50" WidthRequest="50">
                <Image Source="{Binding Picture}" />
            </Frame>
            <Label x:Name="fbDataName"   Text="{Binding FullName}" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            <Label x:Name="fbDataLocate" Text="{Binding Locate}"   TextColor="Blue" HorizontalTextAlignment="Center" />
            <Label x:Name="fbDataGender" Text="{Binding Gender}"   TextColor="Blue" HorizontalTextAlignment="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>